@model ProjektWypozyczalnia.Models.Car

@{
    ViewData["Title"] = "Edit";
}

<h1>Utwórz</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
